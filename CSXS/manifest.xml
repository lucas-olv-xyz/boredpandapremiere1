<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="9.0" ExtensionBundleId="com.meuPainel.Premiere" 
    ExtensionBundleVersion="11.1" ExtensionBundleName="Meu Painel CEP" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <ExtensionList>
        <Extension Id="com.meuPainel.Premiere.panel" Version="10.3.0"/>
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PPRO" Version="9.0"/> <!-- Premiere CC 2015+ -->
            <Host Name="PPRO" Version="25.0"/> <!-- Premiere 2024 -->
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="11.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.meuPainel.Premiere.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./index.jsx</ScriptPath> <!-- Nome corrigido -->
                    <ScriptPath>./CSInterface.js</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--allow-file-access</Parameter>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--allow-running-insecure-content</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Painel Premiere</Menu>
                    <Geometry>
                        <Size>
                            <Height>300</Height>
                            <Width>180</Width>
                        </Size>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
